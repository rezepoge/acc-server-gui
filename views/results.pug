extends layout

block content
  h1= title

  main
    script.
      const results=!{JSON.stringify(results)}, basics=!{JSON.stringify(basics)};
    #timetable
    #results
      each result in results
        .result
          .date=result.datetime.toLocaleString(undefined, {year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit'})
          .trackName=basics.tracks.find(track => track.name === result.trackName).displayname
          .sessionType=result.sessionType
    script(src='/javascripts/results.min.js?ver=' + version defer='defer')

